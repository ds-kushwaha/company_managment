 <!--      <h1>Company</h1> -->
      <div class="container">
                
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Company</th>
              <th>City</th>
              <th>Show</th>
               <th>Edit</th>
                <th>Delete</th>
            </tr>
          </thead>
          <tbody>
             <% @company.each do |c| %>
            <tr>
              <td><%= c.company_name %></td>
              <td><%= c.city.city_name %></td>
              <td><%= link_to 'Show', company_path(c) %></td>
              <td><%= link_to 'Edit', edit_company_path(c) %></td>
              <td><%= link_to 'Delete', company_path(c) ,
                      method: :delete,
                      data: { confirm: 'Are you sure?'} %></td>
            </tr>
             <% end %>
          </tbody>
        </table>
      </div>
      <div style="text-align: center;">
        <%= link_to 'Enter New City', new_company_path, :class=>"btn btn-success"%> <br>
        <br>
        <%= link_to 'Back to Main Menu', welcome_index_path, :class=>"btn btn-primary" %>
      </div>

