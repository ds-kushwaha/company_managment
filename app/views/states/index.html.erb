<h1>States</h1>

<table>
  <tr>
    <th>State</th>
    <th>country</th>
    <th colspan="2"></th>
  </tr>
 
  <% @state.each do |c| %>
    <tr>
      <td><%= c.state_name %></td>
      <td><%= c.country.country_name %></td>

      <td><%= link_to 'Show', state_path(c) %></td>

      <td><%= link_to 'Edit', edit_state_path(c) %></td>
      <td><%= link_to 'Delete', state_path(c) ,
                method: :delete,
                data: { confirm: 'Are you sure?'} %></td>
          </tr>
         
        <% end %>
      </table><br>
      <%= link_to 'Enter New State', new_state_path %> <br>
      <br>
      <%= link_to 'Back to Main Menu', welcome_index_path %>
